<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.AbsoluteLayout2">
    <AbsoluteLayout>
        <Image Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Source="http://lorempixel.com/1920/1080/nature/7" />
        <Label HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0,20,1,100" FontSize="30" AbsoluteLayout.LayoutFlags="WidthProportional" Text="Relax" TextColor="White" />
        <BoxView Color="Black" Opacity="0.5" AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />
        <StackLayout Padding="30,0" AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Profile" FontSize="15" HorizontalOptions="Center" TextColor="#fff" />
            <Label Text="Profile" FontSize="15" HorizontalOptions="CenterAndExpand" TextColor="#fff"  />
            <Label Text="Profile" FontSize="15" HorizontalOptions="Center" TextColor="#fff" />
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>