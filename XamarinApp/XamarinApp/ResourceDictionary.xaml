<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.ResourceDictionary">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Int32 x:Key="borderRadius">20</x:Int32>
            <Color x:Key="buttonBackgroundColor">Green</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" Spacing="20" HorizontalOptions="Center">
        <Button TextColor="White" FontAttributes="Bold" BorderRadius="{StaticResource borderRadius}" Text="Login" BackgroundColor="{StaticResource buttonBackgroundColor}" />
        <Button TextColor="White" FontAttributes="Bold" BorderRadius="{StaticResource borderRadius}" Text="Register" BackgroundColor="{DynamicResource buttonBackgroundColor}" />
        <Button Text="Change Style" Clicked="Button_Clicked" />
    </StackLayout>
</ContentPage>