        <StackLayout>
            <Image Source="{Binding Poster}" />
            <Label Text="{Binding ShowTitle}" FontSize="30" />
            <Label Text="{Binding ReleaseYear}" FontSize="15" TextColor="Gray" />
            <Label Text="{Binding Summary}" />
        </StackLayout>
    </ContentPage.Content>-->
</ContentPage>